extends ../layout/main

block variables
    - var title = $.home.title
    - var themeColor = $.home.theme_color
    - var ibd = $.home.images_base_dir
    - var hs = $.home.home_screen
    - var rps = $.home.request_price_screen
    - var as = $.home.advantages_screen
    - var fds = $.home.find_detail_screen
    - var sss = $.home.safe_shipping_screen
    - var dss = $.home.discounts_screen
    - var lqs = $.home.leave_questions_screen
    - var cws = $.home.comfort_work_screen
    - var description = ''
block content
    section.home
        .container
            .row
                +b.hero
                    +e.H1.title= hs.screen_title.title
                    +e.SPAN.subtitle= hs.screen_title.subtitle
                    +b.UL.advantages-list
                        each advantage in hs.advantages
                            +b.LI.advantge
                                +icon(advantage.icon)
                                +e.SPAN.text= advantage.text
    section.request-price
        .container
            .row
                .content-wrapper
                    h3.section-title= rps.screen_title.title
                    +b.FORM(action= rps.form.action method= rps.form.method).form
                        .form-top
                            each input in rps.form.fields
                                .input-wrapper
                                    +e.INPUT(type= input.type placeholder= input.placeholder name= input.name).input
                                    +icon(input.icon)
                        .form-bottom
                            +b.note
                                +e.P.text= rps.form.note.text
                                +icon(rps.form.note.icon)
                            +b.INPUT(type= rps.form.buttons.request_price.type value= rps.form.buttons.request_price.text).btn._primary
    section.advantages
        .container
            .row
                h2.section-title= as.screen_title.title
                span.subtitle= as.screen_title.subtitle
            .row
                .advantages-list
                    each advantage in as.advantages
                        +b.advantage
                            +icon(advantage.icon)
                            +e.SPAN.text= advantage.text

    section.find-detail
        .container
            .row
                h2.section-title= fds.screen_title.title
                span.subtitle= fds.screen_title.subtitle
            .row
                +b.FORM(action= fds.form.action, method= fds.form.method).form
                    each input in fds.form.fields
                        .input-wrapper
                            +e.INPUT(type= input.type placeholder= input.placeholder name= input.name).input
                            +icon(input.icon)
                    +b.INPUT(type= rps.form.buttons.request_price.type value= rps.form.buttons.request_price.text).btn._secondary
            .row
                .recall-text!= fds.recall_notice.text
    
    section.safe-shipping
        .container
            .row
                h2.section-title= sss.screen_title.title
            .row
                .safe-shipping-list
                    each point in sss.points
                        +b.list-item
                            +e.IMG(src= ibd + point.img alt= point.alt).img
                            +e.SPAN.description= point.text
                            +e.A(href= sss.point_more.link).more= sss.point_more.text
    section.discounts
        .container
            .row
                .h2.section-title= dss.screen_title.title
            .row
                .discounts-list
                    each discount in dss.discounts_list
                        +b.list-item
                            +e.circle
                                if discount.icon_t
                                    +e.SPAN.circle-text= discount.icon_t
                                else
                                    +icon(discount.icon)
                            +e.P.description= discount.text
    section.leave-questions
        .container
            .row
                h2.section-title= lqs.screen_title.title
                p.subtitle= lqs.screen_title.subtitle
            .row
                +b.OL.questions-list
                    each question in lqs.questions_list
                        +e.LI.item= question.question
                            +e.P.answer= question.answer
                +b.director
                    +e.job-title-bg
                        +e.P.job-title= lqs.director_cabinet.job_title
    section.comfort-work
        .container
            .row
                h2.section-title= cws.screen_title.title
                p.subtitle= cws.screen_title.subtitle
            .row
                .road
                    each point in cws.road
                        +b.road-item
                            +e.IMG(src= ibd + point.icon).img
                            +e.SPAN.description= point.text
    section.our-stcok
        - var oss = $.home.our_stock_screen
        .container
            .row
                h2.section-title= oss.screen_title.title
                p.subtitle= oss.screen_title.subtitle
            .row
                .stock-photos
                    each num in [1, 2, 3]
                        +b.stock-photo
                            +e.IMG(src= ibd + oss.image.prefix + num + oss.image.postfix).img
    section.mobile-team
        - var mts = $.home.mobile_team_screen
        .container
            .row
                h2.section-title= mts.screen_title.title
            .row
                .road
                    each point in mts.road
                        +b.road-item
                            +e.circle
                                +e.IMG(src= ibd + point.icon).img
                            +e.SPAN.description= point.text
    section.consultation
        - var cs = $.home.consultation_screen
        .container
            .row
                h2.section-title= cs.screen_title.title
            .row
                span.call-us= cs.call_us.title
                span.phone= cs.call_us.phone
            .row
                +b.FORM(action= cs.form.action method= cs.form.method).form
                    each input in cs.form.fields                    
                        .input-wrapper
                            +e.INPUT(type= input.type placeholder= input.placeholder name= input.name).input
                            +icon(input.icon)
                    +b.INPUT(type= cs.form.buttons.recall_now.type value= cs.form.buttons.recall_now.text).btn._secondary
    section.welcome-to-office
            - var wos = $.home.welcome_office_screen
            .container
                .row
                    h2.section-title= wos.screen_title.title
                    p.adress= wos.adress.text
                    p.phone= wos.phone.text
    section.map
        iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1714.8639467681544!2d40.51329681627967!3d64.54449498945864!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x441836858b23cd43%3A0xf35372b070d2d7d!2z0L_RgNC-0YHQvy4g0KLRgNC-0LjRhtC60LjQuSwgNjUsINCQ0YDRhdCw0L3Qs9C10LvRjNGB0LosINCQ0YDRhdCw0L3Qs9C10LvRjNGB0LrQsNGPINC-0LHQuy4sIDE2MzAwNA!5e0!3m2!1sru!2sru!4v1568131674394!5m2!1sru!2sru' frameborder='0' allowfullscreen)